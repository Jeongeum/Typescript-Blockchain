{
  "include": ["src"], // ts 코드 작성할 위치
  "compilerOptions": {
    "outDir": "build", // 자바스크립트 파일이 생성될 디렉터리
    "target": "ES6", // 컴파일 했을 때의 js 버전 설정 ("호환되는 라이브러리 정의를 포함한 출력되는 js 코드의 버전을 지정")
    "lib": ["ES6", "DOM"], // ts에게 코드가 어디서 동작할 것인지 알려줌 -> ts는 내가 사용할 api가 뭔지 알기 때문에 자동완성 기능 제공(합쳐진 라이브러리의 정의 파일을 특정해주는 역할)
    // "DOM" 없애면 브라우저에서 실행할 것이라는걸 모르기 때문에 document. 자동완성 안된다.
    "strict": true, // ts가 모든 실수로부터 보호해주기 위한 타입 검사 옵션
    "allowJs": true
  }
}
